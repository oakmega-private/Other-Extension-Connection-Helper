{
  "manifest_version": 2,
  "name": "BotFat 串接小幫手",
  "description": "快速串接 BotFat 帳號",
  "version": "1.0.0",
  "icons": {
    "16": "./img/botfat.png",
    "48": "./img/botfat.png",
    "128": "./img/botfat.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title":"BotFat 自動串接",
    "default_icon": "./img/botfat.png"
  },
  "content_scripts": [
    {
      "matches": ["https://manager.line.biz/*","https://developers.line.biz/*", "https://botfat.com/*", "https://asia-east2-botfat.cloudfunctions.net/k_onboarding"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions":[
    "https://manager.line.biz/*",
    "https://developers.line.biz/*",
    "https://botfat.com/*",
    "storage"
  ],
  "web_accessible_resources": [ "*" ]
}
